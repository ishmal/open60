<?xml version='1.0' encoding='utf-8'?>
<widget id="org.open60" version="1.0.2" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Open60</name>
    <description>
        An alternative bluetooth client for the Mini60
    </description>
    <author email="ishmalius@gmail.com" href="http://github.com/ishmal/open60">
        Bob Jamison
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="Orientation" value="landscape" />
    <preference name="EnableViewportScale" value="true" />
    <plugin name="cordova-plugin-toaster" spec="~0.0.1" />
    <engine name="ios" spec="~4.3.1" />
    <engine name="android" spec="~6.1.2" />
    <plugin name="cordova-plugin-bluetooth-serial" spec="~0.4.6" />
</widget>
